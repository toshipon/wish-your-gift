- content_for :javascript do
  = javascript_include_tag "jquery.js"
  = javascript_include_tag "jqueryAutoHeight.js"

%h2
  Your Wish List
- unless current_user.wishlist.try(:has_key?)
  .alert.alert-success
    %button{:type => "button", :class => "close", :"data-dismiss" => "alert"}
      â˜“
    %h4
      Welcome!
    At first, you should register your wish list ID below.

  = link_to "Register your wishlist ID", :action => :register_wishlist_id
- else
  - if @wish_products
    %ul.thumbnails
      - @wish_products.each do |product|
        %li.span3
          = link_to(product['url'], :target => '_blank', :class => 'thumbnail') do
            = image_tag(product["image"])
            %h4
              = product['title']
            %p
              = product['price']

:javascript
  jQuery(function($){
      $('li.span3').autoHeight();
  });